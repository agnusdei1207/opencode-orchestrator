{
    "$schema": "https://opencode.ai/orchestrator-schema.json",
    // ═══════════════════════════════════════════════════════════════
    // Orchestrator Plugin Configuration
    // 6-Agent Micro-Tasking Architecture
    //
    // Location: ~/.config/opencode/orchestrator.json
    //          or .opencode/orchestrator.json (per project)
    //
    // Default: Uses model connected via OpenCode /connect
    // ═══════════════════════════════════════════════════════════════
    // Per-agent model override (optional)
    // If not specified, uses /connect model
    "agents": {
        // Available agents: orchestrator, planner, coder, reviewer, fixer, searcher
        //
        // Example: Use specific models for certain agents
        // "coder": { "model": "anthropic/claude-sonnet-4-5" },
        // "reviewer": { "model": "google/gemini-3-pro" },
        //
        // Recommended for cheap model setup:
        // "planner": { "model": "zhipu/glm-4.7", "temperature": 0.3 },
        // "coder": { "model": "zhipu/glm-4.7", "temperature": 0.2 },
        // "reviewer": { "model": "zhipu/glm-4.7", "temperature": 0.1 },
        // "fixer": { "model": "zhipu/glm-4.7", "temperature": 0.2 }
    },
    // Disabled hooks
    "disabled_hooks": [
        // "auto"  // Uncomment to disable /auto
    ],
    // /auto mode settings
    "auto": {
        // Maximum iterations before stopping (circuit breaker)
        "max_iterations": 50,
        // Maximum retries per error before stopping
        // If same error fails 3 times, stops and reports to user
        "max_retries": 3
    }
}